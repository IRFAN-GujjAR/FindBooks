<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/book_image_view"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/placeholder"/>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/title_of_book_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_image_view"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="Title of Book"
            android:textColor="@android:color/black"/>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/author_of_book_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Author"
            android:textStyle="italic"
            android:layout_toRightOf="@id/book_image_view"
            android:layout_below="@id/title_of_book_text_view"
            android:textAppearance="?android:textAppearanceSmall"/>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/description_of_book_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/book_image_view"
            android:layout_below="@id/author_of_book_text_view"
            tools:text="Android is a movement that has transferred data from laptop to hand-held devices like mobiles. Though there are alternate technologies that "
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:maxLines="6"/>
        <TextView
            android:id="@+id/published_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2014"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title_of_book_text_view"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
